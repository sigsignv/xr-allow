{
	"name": "golang",

	"build": {
		"dockerfile": "Dockerfile"
	},

	"containerEnv": {
		"TZ": "${localEnv:TZ:Asia/Tokyo}"
	},

	"remoteUser": "vscode",

	"customizations": {
		"vscode": {
			"extensions": [
				"EditorConfig.EditorConfig",
				"ms-azuretools.vscode-docker",
				"golang.go",
				"tamasfe.even-better-toml"
			]
		}
	}
}
